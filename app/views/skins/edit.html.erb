<h1>Editing Skin</h1>

<%= simple_form_for(@skin) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-inputs">
    <%= f.input :price %>
  </div>
  <div class="form-inputs">
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to "Show", @skin %>
<%= link_to "Back", skins_path %>
