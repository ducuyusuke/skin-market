<div class="container my-5 py-5">
  <div class="text-white">
    <h1>Editing Skin</h1>
  </div>

  <%= simple_form_for(@skin) do |f| %>

    <div class="form-inputs text-white">
      <%= f.input :name %>
    </div>
    <div class="form-inputs text-white">
      <%= f.input :price %>
    </div>
    <div class="form-inputs text-white">
      <%= f.input :comment %>
    </div>
    <div class="form-actions text-white">
      <%= f.button :submit , class:"btn btn-warning mb-3" %>
    </div>
  <% end %>

  <%= link_to "Show", @skin , class:"btn btn-dark" %>
  <%= link_to "Back", skins_path , class:"btn btn-dark" %>
</div>
