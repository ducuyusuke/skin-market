<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new skin</h3>
        <%= simple_form_for @skin do |f| %>
          <%= f.input :name, placeholder: 'Skin' %>
          <%= f.input :price, placeholder: 'Price' %>
          <%= f.input :comment, placeholder: 'Comment' %>
          <%= f.submit class: 'btn btn-gradient' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
