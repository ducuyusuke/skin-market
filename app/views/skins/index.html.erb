<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1580828343064-fde4fc206bc6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1171&q=80);">
  <div class="container">
    <h1 class="text-center">The best place to find the skin you're looking for!</h1>
    <p class="text-center mt-4">Buy and sell your skins with us</p>
  </div>
</div>
<div class="container mt-3">
  <h3>Find you skin:</h3>
</div>
<div class="container d-flex flex-wrap">
  <% @skins.each do |skin| %>
    <%= link_to skin_path(skin), class: 'text-decoration-none text-secondary' do %>
      <div id="skin_id" class='card mt-3'>
        <p><strong>Name:</strong> <%= skin.name %></p>
        <p><%= skin.comment %></p>
      </div>
    <% end %>
  <% end %>
</div>
